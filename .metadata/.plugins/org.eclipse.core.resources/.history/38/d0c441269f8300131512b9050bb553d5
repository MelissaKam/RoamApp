    @SuppressLint("NewApi") public void onSwitchClicked(View view) {
        // Is the toggle on?
        boolean on = ((Switch) view).isChecked();
        
        if (on) {
            // Enable vibrate
        } else {
            // Disable vibrate
        }
    }

    
}
